<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.save.ChosenAccount">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Despesa"
        android:id="@+id/AddExpenseButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Receita"
        android:id="@+id/AddIncomeButtonCA"
        android:layout_alignTop="@+id/AddExpenseButton"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/AddExpenseButton"
        android:layout_toRightOf="@+id/AddExpenseButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONTA"
        android:id="@+id/AccountTextView"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/AddExpenseButton"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccountItemsListView"
        android:layout_below="@+id/AccountTextView"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/AddIncomeButtonCA"
        android:layout_alignEnd="@+id/AddIncomeButtonCA"
        android:choiceMode="singleChoice" />

</RelativeLayout>