<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<Button
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:text="ADICIONAR DESPESA"
    android:id="@+id/addExpenseButton"
    android:layout_gravity="left|top"
    android:onClick="addExpenseByMain"
   />

<Button
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:text="ADICIONAR RECEITA"
    android:id="@+id/addIncomeButton"
    android:layout_gravity="right|top"
    android:layout_alignTop="@+id/addExpenseButton"
    android:layout_toRightOf="@+id/addExpenseButton"
    android:layout_toEndOf="@+id/addExpenseButton"
    android:onClick="addIncomeByMain"
    />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Adicionar conta"
    android:id="@+id/addAccountButton"
    android:layout_gravity="left|top"
    android:layout_above="@+id/myTargetsButton"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="false"
    android:onClick="addAccount"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minhas metas"
        android:id="@+id/myTargetsButton"
        android:layout_gravity="left|bottom"
        android:onClick="myGoals"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_below="@+id/addIncomeButton"
        android:layout_alignRight="@+id/addIncomeButton"
        android:layout_alignEnd="@+id/addIncomeButton">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lv"
            android:layout_weight="0.75"/>


    </LinearLayout>

</RelativeLayout>